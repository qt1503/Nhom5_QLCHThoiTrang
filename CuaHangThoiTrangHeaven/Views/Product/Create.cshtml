@model CuaHangThoiTrangHeaven.Models.SanPham

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.MaSP)
        @Html.TextBoxFor(m => m.MaSP, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MaSP)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TenSP)
        @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TenSP)
    </div>

    <div class="form-group">
        @Html.Label("MaDM", "Chọn Danh Mục")
        @Html.DropDownList("MaDM", (SelectList)ViewBag.MaDM, "Chọn danh mục", new { @class = "form-control" })
        @Html.ValidationMessage("MaDM")
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ChiTiet)
        @Html.TextBoxFor(m => m.ChiTiet, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ChiTiet)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GiaBan)
        @Html.TextBoxFor(m => m.GiaBan, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GiaBan)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SoLuong)
        @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SoLuong)
    </div>

    <div class="form-group">
        <label for="ImageUpload">Chọn ảnh sản phẩm:</label>
        <input type="file" name="file" class="form-control" id="ImageUpload" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
}





