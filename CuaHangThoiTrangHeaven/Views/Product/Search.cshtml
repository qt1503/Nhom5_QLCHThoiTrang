@model IEnumerable<WebHeavenOnline.Models.EF.Product>

<h2>Kết quả tìm kiếm cho: @Request.QueryString["keyword"]</h2>

@if (!Model.Any())
{
    <p>Không tìm thấy sản phẩm nào.</p>
}
else
{
    <ul>
        @foreach (var product in Model)
        {
            <li>
                <h3>@product.Title</h3>
                <p>@product.Description</p>
                <p>Giá: @product.Price</p>
            </li>
        }
    </ul>
}
