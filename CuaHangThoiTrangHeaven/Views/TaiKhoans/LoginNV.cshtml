@model Mvc.Models.TaiKhoan

@{
    ViewBag.Title = "Đăng Nhập Nhân Viên";
    Layout = null; // Sử dụng layout nếu cần
}

<body style="background:url('@Url.Content("~/Image/background.png")'); background-repeat: no-repeat; background-size: cover;">
    <div class="login-container">
        <h2>Đăng Nhập Nhân Viên</h2>

        @using (Html.BeginForm("LoginNhanVien", "TaiKhoans", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <h4>Email</h4>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email nhân viên" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h4>Mật Khẩu</h4>
                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</body>
@if (ViewBag.error != null)
{
    <div class="text-danger">@ViewBag.error</div>
}
